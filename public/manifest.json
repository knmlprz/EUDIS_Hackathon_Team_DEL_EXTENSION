{
  "name": "PrivacyProtector",
  "description": "PrivacyProtector",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab","scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["logic.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "loading.html" ],
      "matches": [ "https://*/*" ]
    }
  ]
}